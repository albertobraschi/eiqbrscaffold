<%% content_for :navegacao do %>
	<%%= link_to '<%= plural_name.capitalize %>', <%= plural_name %>_path %> -> <%= link_to 'Detalhando <%= singular_name %>', <%= singular_name %>_path(@<%= singular_name %>) %>
<%% end -%>
<%% content_for :cor do %>
_cinza
<%% end -%>
<fieldset class="fieldset">
	<legend>Dados do <%= singular_name %></legend>
	
<% for attribute in attributes -%>
<p>
  <b><%= attribute.column.human_name %>:</b>
  <%%=h @<%= singular_name %>.<%= attribute.name %> unless @<%= singular_name %>.<%= attribute.name %>.blank? %>
</p>

<% end -%>

</fieldset>

